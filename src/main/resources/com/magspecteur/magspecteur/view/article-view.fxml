<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="articleViewRoot" minHeight="350.0" minWidth="700.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="com.magspecteur.magspecteur.controller.ArticleController">
    <BorderPane>
        <left>
            <VBox minHeight="350.0" minWidth="170.0" spacing="10.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="Filtres">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="searchField" minWidth="150.0" onKeyPressed="#onSearchFieldKeyPress"/>
                <Label contentDisplay="RIGHT" minWidth="190.0" text="Theme">
                    <graphic>
                        <ChoiceBox fx:id="themeChoiceBox" minWidth="150.0"/>
                    </graphic>
                </Label>
                <HBox alignment="CENTER">
                    <Button fx:id="searchButton" onMouseClicked="#onSearchButtonClick" text="Filtrer"/>
                </HBox>
            </VBox>
        </left>
        <center>
            <FlowPane fx:id="articleList" hgap="10.0" minWidth="490.0" vgap="10.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </BorderPane.margin>
            </FlowPane>
        </center>
    </BorderPane>
</AnchorPane>
