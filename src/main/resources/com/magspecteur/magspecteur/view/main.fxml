                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Label>
            </ToolBar>
        </top>
      <center>
          <Pane BorderPane.alignment="CENTER">
              <fx:include fx:id="articlesPane" source="article.fxml" />
              <fx:include fx:id="magazinesPane" source="magazine.fxml" />
              <fx:include fx:id="publishersPane" source="publisher.fxml" />
          </Pane>
